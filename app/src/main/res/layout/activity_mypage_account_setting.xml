<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".Mypage_Account_Setting_Activity">

    <LinearLayout
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="14dp"
        android:paddingBottom="15dp">

        <ImageView
            android:id="@+id/backbtn"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginRight="32dp"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="계좌 설정"
            android:textColor="#101010"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <EditText
        android:id="@+id/tv_bank_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:backgroundTint="#C4C4C4"
        android:hint="은행 이름"
        android:textColorHint="#C4C4C4"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/tv_receiver_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="12dp"
        android:backgroundTint="#C4C4C4"
        android:hint="예금주명 (ex. 세이빗, ㅅㅇㅂ)"
        android:textColorHint="#C4C4C4"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/tv_account_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="12dp"
        android:backgroundTint="#C4C4C4"
        android:hint="계좌번호 ( - 없이 입력해주세요.)"
        android:textColorHint="#C4C4C4"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btn_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="39dp"
        android:layout_marginRight="9dp"
        android:background="@drawable/receipt_button"
        android:backgroundTint="#fd5401"
        android:text="등록"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:text="* 채팅방에서 '계좌 보내기' 버튼을 누르면 전송되는 항목이에요."
        android:textColor="#C4C4C4"
        android:textSize="12sp" />
</LinearLayout>
</layout>