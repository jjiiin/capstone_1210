<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<FrameLayout
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BoardHomeActivity">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="32dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:letterSpacing="-0.03"
                android:lineSpacingExtra="9sp"
                android:text="목록"
                android:textColor="#101010"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/category_all"
                    android:layout_width="50dp"
                    android:layout_height="28dp"
                    android:layout_marginLeft="16dp"
                    android:text="전체"
                    android:textSize="14sp"
                    android:background="@drawable/select_round"/>

                <Button
                    android:id="@+id/category_kor"
                    android:layout_width="50dp"
                    android:layout_height="28dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/round_button"
                    android:text="한식"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/category_bun"
                    android:layout_width="50dp"
                    android:layout_height="28dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/round_button"
                    android:text="분식"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/category_jap"
                    android:layout_width="50dp"
                    android:layout_height="28dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/round_button"
                    android:text="일식"
                    android:textSize="14sp" />
                <Button
                    android:id="@+id/category_chi"
                    android:layout_width="50dp"
                    android:layout_height="28dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/round_button"
                    android:text="중식"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/category_asian"
                    android:layout_width="90dp"
                    android:layout_height="28dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/round_button"
                    android:text="아시안, 양식"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/category_fast"
                    android:layout_width="80dp"
                    android:layout_height="28dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/round_button"
                    android:text="패스트푸드"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/category_do"
                    android:layout_width="60dp"
                    android:layout_height="28dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/round_button"
                    android:text="도시락"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/category_cafe"
                    android:layout_width="85dp"
                    android:layout_height="28dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/round_button"
                    android:text="카페,디저트"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/category_chicken"
                    android:layout_width="50dp"
                    android:layout_height="28dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/round_button"
                    android:text="치킨"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/category_pizza"
                    android:layout_width="50dp"
                    android:layout_height="28dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/round_button"
                    android:text="피자"
                    android:textSize="14sp" />

            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="-0.02"
                android:lineSpacingExtra="6sp"
                android:layout_gravity="center"
                android:text="목록 결과"
                android:textColor="#808080"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_gravity="center"
                android:letterSpacing="-0.02"
                android:lineSpacingExtra="6sp"
                android:text="4"
                android:textColor="#101010"
                android:visibility="invisible"
                android:textSize="14sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Switch
                    android:id="@+id/noti"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="100dp"
                    android:switchMinWidth="23dp"
                    android:switchPadding="20dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="새 글 알림"
                    android:textSize="12sp"
                    android:textColor="#c4c4c4"
                    android:letterSpacing="-0.02"
                    android:lineSpacingExtra="1sp"
                    android:layout_gravity="center"/>

                <CheckBox
                    android:id="@+id/quick"
                    android:layout_marginLeft="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#c4c4c4"
                    android:letterSpacing="-0.02"
                    android:layout_gravity="center"
                    android:lineSpacingExtra="6sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="즉각 주문"
                    android:textSize="12sp"
                    android:textColor="#c4c4c4"
                    android:letterSpacing="-0.02"
                    android:lineSpacingExtra="1sp"
                    android:layout_gravity="center"/>


            </LinearLayout>

        </LinearLayout>

        <ListView
            android:id="@+id/LvMain"
            android:layout_width="match_parent"
            android:layout_height="530dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:divider="@null"
            android:dividerHeight="10dp"
            android:elevation="10dp"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:reverseLayout="true"
            app:stackFromEnd="true"></ListView>


    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/writeBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
</layout>