<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mhfLayout"
    tools:context=".MapHomeFragment">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/mhf_logo"
        android:layout_marginTop="14.7dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오늘은 무엇을 먹을까요?"
        android:layout_marginTop="24.8dp"
        android:layout_marginLeft="20dp"
        android:textColor="#101010"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="35dp"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/mhf_loc"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/addressTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5.8dp"
        android:text="세이빗동 빗길 23-10"
        android:layout_marginLeft="-3dp"
        android:textColor="#808080"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <ImageView
        android:id="@+id/mapGo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/mhf_go"
        android:layout_marginTop="5.8dp"
        app:layout_constraintStart_toEndOf="@+id/addressTv"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/mhf_char"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17.8dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/category_all"
                android:layout_width="50dp"
                android:layout_height="28dp"
                android:layout_marginLeft="16dp"
                android:background="@drawable/select_round"
                android:text="전체"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/category_kor"
                android:layout_width="50dp"
                android:layout_height="28dp"
                android:layout_marginLeft="16dp"
                android:background="@drawable/round_button"
                android:text="한식"
                android:textColor="#c4c4c4"
                android:textSize="14sp" />

            <Button
                android:id="@+id/category_bun"
                android:layout_width="50dp"
                android:layout_height="28dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/round_button"
                android:text="분식"
                android:textColor="#c4c4c4"
                android:textSize="14sp" />

            <Button
                android:id="@+id/category_chi"
                android:layout_width="50dp"
                android:layout_height="28dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/round_button"
                android:text="중식"
                android:textColor="#c4c4c4"
                android:textSize="14sp" />

            <Button
                android:id="@+id/category_jap"
                android:layout_width="50dp"
                android:layout_height="28dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/round_button"
                android:text="일식"
                android:textColor="#c4c4c4"
                android:textSize="14sp" />

            <Button
                android:id="@+id/category_asian"
                android:layout_width="90dp"
                android:layout_height="28dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/round_button"
                android:text="아시안, 양식"
                android:textColor="#c4c4c4"
                android:textSize="14sp" />

            <Button
                android:id="@+id/category_fast"
                android:layout_width="80dp"
                android:layout_height="28dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/round_button"
                android:text="패스트푸드"
                android:textColor="#c4c4c4"
                android:textSize="14sp" />

            <Button
                android:id="@+id/category_do"
                android:layout_width="60dp"
                android:layout_height="28dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/round_button"
                android:text="도시락"
                android:textColor="#c4c4c4"
                android:textSize="14sp" />

            <Button
                android:id="@+id/category_cafe"
                android:layout_width="85dp"
                android:layout_height="28dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/round_button"
                android:text="카페,디저트"
                android:textColor="#c4c4c4"
                android:textSize="14sp" />

            <Button
                android:id="@+id/category_chicken"
                android:layout_width="50dp"
                android:layout_height="28dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/round_button"
                android:text="치킨"
                android:textColor="#c4c4c4"
                android:textSize="14sp" />

            <Button
                android:id="@+id/category_pizza"
                android:layout_width="50dp"
                android:layout_height="28dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/round_button"
                android:text="피자"
                android:textColor="#c4c4c4"
                android:textSize="14sp" />
        </LinearLayout>
    </HorizontalScrollView>


    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/mhfmyloc"
        android:layout_marginTop="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mapView" />

<!--    <androidx.viewpager2.widget.ViewPager2-->
<!--        android:id="@+id/viewPager"-->
<!--        android:visibility="gone"-->
<!--        android:layout_width="328dp"-->
<!--        android:layout_height="177dp"-->
<!--        app:layout_constraintBottom_toBottomOf="@+id/mapView"-->
<!--        app:layout_constraintEnd_toEndOf="parent"-->
<!--        app:layout_constraintStart_toStartOf="parent" />-->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="172dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="15dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        card_view:cardBackgroundColor="#ffffff"
        card_view:cardCornerRadius="5dp"
        card_view:contentPadding="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/main_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/item_image"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/chicken" />

                <TextView
                    android:id="@+id/item_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/item_image"
                    android:layout_toRightOf="@id/item_image"
                    android:letterSpacing="-0.03"
                    android:text="Title 입니다"
                    android:textColor="#101010"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/mark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/item_title"
                    android:layout_centerHorizontal="@id/item_place"
                    android:layout_marginTop="6dp"
                    android:layout_toLeftOf="@id/item_place"
                    android:layout_toEndOf="@+id/item_image"
                    android:layout_toRightOf="@id/item_image"
                    android:src="@drawable/ic_place_24px" />

                <TextView
                    android:id="@+id/item_place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/item_title"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:layout_toRightOf="@id/mark"
                    android:letterSpacing="-0.02"
                    android:text="만남 장소"
                    android:textColor="#393939"
                    android:textSize="12sp"
                    android:textStyle="normal" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/main_title"
                android:padding="10dp">
                <ImageView
                    android:id="@+id/item_image_in"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/chicken"
                    android:visibility="invisible" />

                <LinearLayout
                    android:id="@+id/detail1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/item_image_in"
                    android:layout_toRightOf="@id/item_image_in"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/item_detail1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:letterSpacing="-0.03"
                        android:text="주문 예정"
                        android:textColor="#c4c4c4"
                        android:textSize="11sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/item_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/item_detail1"
                        android:layout_marginTop="3dp"
                        android:layout_toRightOf="@id/item_image_in"
                        android:gravity="center_horizontal"
                        android:letterSpacing="-0.02"
                        android:text="협의 가능"
                        android:textColor="#393939"
                        android:textSize="14sp"
                        android:textStyle="normal" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_toRightOf="@id/detail1"
                    android:src="@drawable/partition" />

                <LinearLayout
                    android:id="@+id/detail2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_toEndOf="@+id/detail1"
                    android:layout_toRightOf="@id/detail1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/item_detail2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:letterSpacing="-0.03"
                        android:text="배달비"
                        android:textColor="#c4c4c4"
                        android:textSize="11sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/item_fee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/item_detail2"
                        android:layout_marginTop="3dp"
                        android:letterSpacing="-0.02"
                        android:text="3000원"
                        android:textColor="#393939"
                        android:textSize="14sp"
                        android:textStyle="normal" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_toRightOf="@id/detail2"
                    android:src="@drawable/partition" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_toEndOf="@+id/detail2"
                    android:layout_toRightOf="@id/detail2"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/item_detail3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:letterSpacing="-0.03"
                        android:text="모집인원"
                        android:textColor="#c4c4c4"
                        android:textSize="11sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/item_person"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/item_detail3"
                        android:layout_marginTop="3dp"
                        android:letterSpacing="-0.02"
                        android:text="제한 없음"
                        android:textColor="#393939"
                        android:textSize="14sp"
                        android:textStyle="normal" />
                </LinearLayout>
            </RelativeLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/look"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:textSize="12sp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:src="@drawable/board_show"
        app:layout_constraintBottom_toTopOf="@+id/card_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/writeBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="18dp"
        android:layout_marginBottom="14dp"
        android:src="@drawable/icon"
        app:layout_constraintBottom_toTopOf="@+id/card_view"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
</layout>